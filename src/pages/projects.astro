---
import Layout from '../layouts/Layout.astro'

const projects = [
  {
    title: "Project Alpha",
    description: "A minimal tool for organizing thoughts and ideas.",
    year: "2024",
    status: "Active"
  },
  {
    title: "Kasigo",
    description: "Better way to deploy to cloudflare (Alpha)",
    year: "2025",
    status: "Active"
  },
  {
    title: "Meja",
    description: "AI powered mongodb GUI (Alpha)",
    year: "2025",
    status: "Active"
  }
]
---

<Layout title="Projects" description="Things I've built">
  <div>
    <a href="/" class="hover:text-hotpink">‚Üê Back to home</a>
    <h1 class="font-semibold text-xl mt-6">### Projects</h1>

    <div class="mt-4 mb-12">
      <p>
        A selection of tools and experiments I've worked on.
      </p>
    </div>

    <div class="element-spacing">
      <ul style="list-style: none; padding: 0;">
        {projects.map(project => (
          <li style="margin: 2rem 0; padding-bottom: 2rem; border-bottom: 1px solid #f0f0f0;">
            <div>
              <div style="display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 0.5rem;">
                <h3 class="text-lg">{project.title}</h3>
                <span style="font-size: 0.875rem; ">{project.year}</span>
              </div>
              <p class="text-fg-secondary/80 dark:text-fg-dark-secondary">{project.description}</p>
              <!--<span style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em;">-->
              <!--  {project.status}-->
              <!--</span>-->
            </div>
          </li>
        ))}
      </ul>
    </div>
  </div>
</Layout>
